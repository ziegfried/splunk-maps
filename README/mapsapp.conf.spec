# Default settings for the maps view
[mapsview-defaults]

center = <value>
* The center location of the map as JSON array of latitude and longitude float values
 
zoom = <value>
* The initial zoom level of the map (1-18)

overlay = [heatmap|clusters]
* The data visualization overlay enabled by default

tileLayer = <value>
* The tile layer enabled by default


[tiles:<name>]
name = <value>
url = <value>
minZoom = <value>
maxZoom = <value>
attribution = <value>
type = <value>
